<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RoomWordsSample" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">?attr/colorPrimaryVariant</item>
        <color name="colorPrimary" tools:ignore="DuplicateDefinition">#2196F3</color>
        <color name="colorPrimaryLight">#64b5f6</color>
        <color name="colorPrimaryDark">#1976D2</color>
        <color name="colorAccent">#FFFF9800</color>
        <color name="colorTextPrimary">@android:color/white</color>
        <color name="colorScreenBackground">#fff3e0</color>
        <color name="colorTextHint">#E0E0E0</color>    </style>

    <style name="Theme.RoomWordsSample.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RoomWordsSample.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RoomWordsSample.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>